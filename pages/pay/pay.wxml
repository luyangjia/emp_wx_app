<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../../utils/images/loginLog.jpg"></image> 
 </view> 
 <view class="login-from"> 
  
 <!--账号-->
 <view class="inputView"> 
   
  <label class="loginLab">金额：</label> 
  <input class="inputText" placeholder="请输入金额" bindinput="amountInput" value="{{amount}}" /> 
 </view> 
 
   
  
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">{{btname}}</button> 
 </view> 
 </view> 
</view>